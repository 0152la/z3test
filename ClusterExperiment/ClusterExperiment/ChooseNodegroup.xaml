<Window x:Class="ClusterExperiment.ChooseNodegroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Nodegroup..." Height="300" Width="300" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="30" />            
        </Grid.ColumnDefinitions>
        
        <Label Height="26" Name="labelState" Content="Connecting..." HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0" />
        <ListBox HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="listBox" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="0" MouseDoubleClick="listBox_MouseDoubleClick" />
    </Grid>
</Window>
